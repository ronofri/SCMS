@model SCMS.Models.Schedule


            <div class="container-fluid">
    <div class="row-fluid table-bordered" style="margin-bottom: 15px">
        <div class="span5 offset1">
            <div class="form-group">
                <label>Customer Name: </label>
                @Html.DisplayFor(model => Model.POC.Customer.Name)
            </div>
            <div class="form-group">
                <label>Customer Address: </label>
                @Html.DisplayFor(model => Model.POC.Customer.Address)
            </div>
            
            <div class="form-group">
                <label>Incoterm:</label>
                @Html.DisplayFor(model => Model.POC.CustomerIncoterm.Name)
            </div>
            <div class="table-bordered" style="margin: 0 15px 15px 0">
                <div class="form-group">
                    <label>Comments: </label>
                </div>
                <div class="form-group">
                    @Html.DisplayFor(model => model.POC.Comments)
                </div>
            </div>
        </div>
        <div class="span6 ">
            <div class="form-group">
                <label>Product Type: </label>
                @Html.DisplayFor(model => Model.POC.Product.Name)
            </div>
            <div class="form-group">
                <label>Price per Ton: $</label>
                @Html.DisplayFor(model => Model.POC.PricePerTon)
            </div>
            <div class="form-group">
                <label>Total Amount:</label>
                @Html.DisplayFor(model => model.POC.AmountTotal)
            </div>            
        </div>
    </div>
</div>
