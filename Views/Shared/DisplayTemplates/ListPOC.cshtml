@model IEnumerable<SCMS.Models.POC>

@if (Model.Count() > 0)
{
     <table class="table">
                <tr>
                    <th>
                        PO Number
                    </th>
                    <th>
                        PO Status
                    </th>
                    <th>
                        Customer Name
                    </th>
                    <th>
                        Customer Address
                    </th>
                    <th>
                        Destination Port
                    </th>
                    <th>
                        Incoterm
                    </th>
                    <th>
                        Product Type
                    </th>
                    <th>
                        Amount (Tons)
                    </th>
                    <th>
                        Price Per Tons
                    </th>
                    <th>
                        Creation Date
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink("" + item.POCID, "Details", new { id = item.POCID })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StatusString)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DestinationPort.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerIncoterm.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AmountTotal)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PricePerTon)
                        </td>                        
                        <td>
                            @Html.DisplayFor(modelItem => item.CreationDate)
                        </td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                                    <img src="~/Content/images/iconCog.png" width="15" height="15"></img>  
                                </button>
                                <ul class="dropdown-menu dropdown-menu-right" role="menu" aria-labelledby="dropdownMenu1">
                                    <li role="presentation">@Html.ActionLink("Edit", "Edit", new { id = item.POCID })</li>
                                    <li role="presentation">@Html.ActionLink("Details", "Details", new { id = item.POCID })</li>
                                    <li role="presentation" class="divider"></li>
                                    <li role="presentation">@Html.ActionLink("Delete", "Delete", new { id = item.POCID })</li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }

            </table>
}